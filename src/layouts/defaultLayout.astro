---
import Header from '@components/header.astro'
import Footer from '@components/footer.astro'
interface Props {
  title?: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <Header/>
    <main
      class="h-auto absolute w-full top-12 flex justify-center defaultDark defaultLight defaultAnimation"
    >
      <slot />
    </main>
    <Footer/>
  </body>
</html>
